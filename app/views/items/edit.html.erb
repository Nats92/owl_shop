<h1>Edit item</h1>
<%= form_for @item do |f| %>
  <p><label>Название: <%= f.text_field :name %></label></p>
  <p><label>Изображение: <%= f.file_field :image %></label></p>
  <p><label>Цена: <%= f.text_field :price %></label></p>
  <p><label>Описание: <%= f.text_field :description %></label></p>
  <%= f.submit "Обновить данные" %>
<% end %>
